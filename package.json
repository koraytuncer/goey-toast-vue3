{
  "name": "goey-toast-vue",
  "version": "0.1.0",
  "description": "A gooey, morphing toast component for Vue 3 built on vue-sonner with Motion animations",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/index.css"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "motion": ">=11.0.0",
    "vue": ">=3.3.0"
  },
  "peerDependenciesMeta": {
    "motion": {
      "optional": false
    }
  },
  "dependencies": {
    "vue-sonner": "^1.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^25.2.3",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^28.0.0",
    "motion": "^11.18.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.12"
  },
  "keywords": [
    "toast",
    "notification",
    "vue",
    "vue3",
    "vue-sonner",
    "animation",
    "morph",
    "gooey"
  ],
  "license": "MIT",
  "homepage": "https://goey-toast-vue.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/koraytuncer/goey-toast-vue"
  },
  "bugs": {
    "url": "https://github.com/koraytuncer/goey-toast-vue/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
